<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wu.monitor.mapper.MapMapper">
    <resultMap id="BaseResultMap" type="com.wu.monitor.model.Map">
        <id column="id" property="id" />
        <result column="map_id" property="mapId" />
        <result column="name" property="name" />
        <result column="image_path" property="imagePath" />
        <result column="x_min" property="xMin" />
        <result column="x_max" property="xMax" />
        <result column="y_min" property="yMin" />
        <result column="y_max" property="yMax" />
        <result column="create_time" property="createTime" />
    </resultMap>
    
    <sql id="Base_Column_List">
        id, map_id, name, image_path, x_min, x_max, y_min, y_max, create_time
    </sql>
    
    <select id="selectAllMaps" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY create_time ASC
    </select>
    
    <select id="selectMapById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        WHERE id = #{id}
    </select>
    
    <select id="selectMapByMapId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        WHERE map_id = #{mapId}
    </select>
    
    <insert id="insertMap" parameterType="com.wu.monitor.model.Map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO map (map_id, name, image_path, x_min, x_max, y_min, y_max, create_time)
        VALUES (#{mapId}, #{name}, #{imagePath}, #{xMin}, #{xMax}, #{yMin}, #{yMax}, #{createTime})
    </insert>
    
    <update id="updateMap" parameterType="com.wu.monitor.model.Map">
        UPDATE map
        <set>
            <if test="mapId != null">map_id = #{mapId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="imagePath != null">image_path = #{imagePath},</if>
            <if test="xMin != null">x_min = #{xMin},</if>
            <if test="xMax != null">x_max = #{xMax},</if>
            <if test="yMin != null">y_min = #{yMin},</if>
            <if test="yMax != null">y_max = #{yMax}</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteMapById">
        DELETE FROM map WHERE id = #{id}
    </delete>
    
    <delete id="batchDeleteMaps">
        DELETE FROM map WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <select id="selectCurrentMap" resultMap="BaseResultMap">
        SELECT m.* FROM map m
        JOIN current_map cm ON m.id = cm.map_id
        LIMIT 1
    </select>
    
    <update id="updateCurrentMap">
        INSERT INTO current_map (map_id) VALUES (#{id})
        ON DUPLICATE KEY UPDATE map_id = #{id}
    </update>
    
    <delete id="clearCurrentMap">
        DELETE FROM current_map
    </delete>
</mapper>