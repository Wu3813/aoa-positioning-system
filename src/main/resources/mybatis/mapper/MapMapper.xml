<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wu.monitor.mapper.MapMapper">
    <resultMap id="BaseResultMap" type="com.wu.monitor.model.Map">
        <id column="id" property="id" />
        <result column="map_id" property="mapId" jdbcType="BIGINT" />
        <result column="name" property="name" />
        <result column="image_path" property="imagePath" />
        <result column="width" property="width" />
        <result column="height" property="height" />
        <result column="origin_x" property="originX" />
        <result column="origin_y" property="originY" />
        <result column="scale" property="scale" />
        <result column="point1_x" property="point1X" />
        <result column="point1_y" property="point1Y" />
        <result column="point2_x" property="point2X" />
        <result column="point2_y" property="point2Y" />
        <result column="real_distance" property="realDistance" />
        <result column="create_time" property="createTime" />
    </resultMap>
    
    <sql id="Base_Column_List">
        id, map_id, name, image_path, width, height, origin_x, origin_y, scale, 
        point1_x, point1_y, point2_x, point2_y, real_distance, create_time
    </sql>
    
    <select id="selectAllMaps" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY create_time ASC
    </select>
    
    <select id="selectMapById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        WHERE id = #{id}
    </select>
    
    <select id="selectMapByMapId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM map
        WHERE map_id = #{mapId}
    </select>
    
    <insert id="insertMap" parameterType="com.wu.monitor.model.Map" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO map (
            map_id, name, image_path, width, height, origin_x, origin_y, scale, 
            point1_x, point1_y, point2_x, point2_y, real_distance, create_time
        )
        VALUES (
            #{mapId}, #{name}, #{imagePath}, #{width}, #{height}, #{originX}, #{originY}, #{scale},
            #{point1X}, #{point1Y}, #{point2X}, #{point2Y}, #{realDistance}, #{createTime}
        )
    </insert>
    
    <update id="updateMap" parameterType="com.wu.monitor.model.Map">
        UPDATE map
        <set>
            <if test="mapId != null">map_id = #{mapId},</if>
            <if test="name != null">name = #{name},</if>
            <if test="imagePath != null">image_path = #{imagePath},</if>
            <if test="width != null">width = #{width},</if>
            <if test="height != null">height = #{height},</if>
            <if test="originX != null">origin_x = #{originX},</if>
            <if test="originY != null">origin_y = #{originY},</if>
            <if test="scale != null">scale = #{scale},</if>
            <if test="point1X != null">point1_x = #{point1X},</if>
            <if test="point1Y != null">point1_y = #{point1Y},</if>
            <if test="point2X != null">point2_x = #{point2X},</if>
            <if test="point2Y != null">point2_y = #{point2Y},</if>
            <if test="realDistance != null">real_distance = #{realDistance}</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteMapById">
        DELETE FROM map WHERE id = #{id}
    </delete>
    
    <delete id="batchDeleteMaps">
        DELETE FROM map WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>